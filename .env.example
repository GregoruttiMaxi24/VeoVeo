# ============================================
# CONFIGURACIÓN DE EMAILS
# ============================================

# Servicio a usar: 'gmail', 'smtp', 'sendgrid', 'phpmail'
EMAIL_SERVICE=gmail

# Gmail
GMAIL_ADDRESS=tu_email@gmail.com
